<div class = "main_container">
    <h2>スケジュール編集</h2>
    
    <%= render "shared/error", obj: @post %>
    <%= form_with model: @post do |f| %>
      <table>
        <tr>
          <th>タイトル</th>
          <td><%= f.text_field :title %></td>
        </tr>
        <tr>
          <th>開始日</th>
          <td><%= f.date_field :start_at %></td>
        </tr>
        <tr>
          <th>終了日</th>
          <td><%= f.date_field :end_at %></td>
        </tr>
        <tr>
          <th>終日</th>
          <td><%= f.check_box :is_all_day %><br>終日の場合はチェックを入れます</td>
        </tr>
        <tr>
          <th>メモ</th>
          <td><%= f.text_area :memo %></td>
        </tr>
      </table>
  
      <div>
        <ul>
          <li><%= f.submit "スケジュールの編集を反映する" %></li>
          <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
        </ul>
      </div>
    <% end %>
    
</div>

