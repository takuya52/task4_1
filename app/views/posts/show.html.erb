<h2>スケジュール詳細</h2>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @post.title %></td>
  </tr>
  <tr>
    <th>開始日時</th>
    <td><%= @post.start_at.to_s(:date_jp) %></td>
  </tr>
  <tr>
    <th>終了日時</th>
    <td><%= @post.end_at.to_s(:date_jp) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
      <% if @post.is_all_day %>
        <strong>○</strong>
      <% end %>
    </td>
  </tr>
  <tr>
      <th>スケジュールメモ</th>
      <td><%= @post.memo %></td>
  </tr>
</table>

<div>
    <ul>
      <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
      <li><%= link_to "スケジュールを編集する", :edit_post %></li>
      <li><%= link_to "スケジュールを削除する", @post, method: :delete, data: {confirm: "本当に削除しますか？" } %></li>
    </ul>
  
</div>