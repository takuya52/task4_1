<h2>スケジュール新規作成</h2>

<% if flash[:notice] %>
  <p class="notice"><%= notice %></p>
<% end %>

<%= render "shared/error", obj: @post %>
    
<%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th>タイトル</th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th>開始日</th>
      <td><%= f.date_field :start_at %></td>
    </tr>
     <tr>
      <th>終了日</th>
      <td><%= f.date_field :end_at %></td>
    </tr>
     <tr>
      <th>終日</th>
      <td><%= f.check_box :is_all_day %><br>終日の場合はチェックを入れます</td>
    </tr>
     <tr>
      <th>スケジュールメモ</th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>
  
  <div>
    <ul>
      <li><%= f.submit "スケジュールを新規登録する" %></li>
      <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
    </ul>
  </div>
<% end %>